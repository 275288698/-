<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backshezhi1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/xinxi"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/ganshou"
        android:layout_below="@+id/ganshou"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape1"
        android:text="注册与登录"
        android:textColor="#ffffff"
        android:textSize="20dip" />

    <Button
        android:id="@+id/bangzhu"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/xinxi"
        android:layout_below="@+id/xinxi"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape1"
        android:text="使用帮助"
        android:textColor="#ffffff"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="190dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="" />

    <Button
        android:id="@+id/ganshou"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@+id/button9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape1"
        android:text="用户反馈"
        android:textColor="#ffffff"
        android:textSize="20dip" />

    <Button
        android:id="@+id/kongzhi"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/bangzhu"
        android:layout_below="@+id/bangzhu"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape1"
        android:text="选择产品型号"
        android:textColor="#ffffff"
        android:textSize="20dip" />

    <Button
        android:id="@+id/tuichu"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/kongzhi"
        android:layout_below="@+id/kongzhi"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape1"
        android:text="退出登录"
        android:textColor="#ffffff"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_above="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginTop="10dp"
        android:background="#708090"
        android:gravity="center"
        android:text="设置"
        android:textColor="#ffffff"
        android:textSize="20dip" />

    <Button
        android:id="@+id/button9"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:background="#708090"
        android:gravity="center"
        android:text="返回"
        android:textColor="#ff0000"
        android:textSize="20dip" />

    
</RelativeLayout>