<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/backshezhi1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/button15"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:background="#708090"
        android:gravity="center"
        android:text="返回"
        android:textColor="#ff0000"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_above="@+id/textView44"
        android:layout_alignRight="@+id/textView44"
        android:background="#708090"
        android:gravity="center"
        android:text="设置-查看修改会员信息"
        android:textColor="#ffffff"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="190dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/TextView04"
        android:layout_toLeftOf="@+id/TextView01"
        android:background="#f0bd00"
        android:gravity="center"
        android:text="密码："
        android:textColor="#ffffff"
        android:textSize="15dip" />

    <EditText
        android:id="@+id/TextView04"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_below="@+id/TextView02"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/TextView02"
        android:background="#f0bd00"
        android:gravity="center"
        android:text=""
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/TextView01"
        android:layout_toLeftOf="@+id/TextView01"
        android:background="#f0bd00"
        android:gravity="center"
        android:text="用户名："
        android:textColor="#ffffff"
        android:textSize="15dip" />

    <TextView
        android:id="@+id/TextView08"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/TextView07"
        android:layout_toLeftOf="@+id/TextView07"
        android:background="#f0bd00"
        android:gravity="center"
        android:text="手机："
        android:textColor="#ffffff"
        android:textSize="15dip" />


    <EditText
        android:id="@+id/TextView05"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/TextView04"
        android:layout_below="@+id/button16"
        android:layout_marginTop="30dp"
        android:background="#f0bd00"
        android:gravity="center"
        android:text=""
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/TextView07"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/TextView05"
        android:layout_below="@+id/TextView05"
        android:layout_marginTop="20dp"
        android:background="#f0bd00"
        android:gravity="center"
        android:text=""
        android:textColor="#ffffff" />
    
    

    <Button
        android:id="@+id/button16"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_below="@+id/TextView03"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape1"
        android:layout_marginTop="20dp"
        android:text="查看" 
        android:textColor="#ffffff"
        android:textSize="15dip"/>

    <EditText
        android:id="@+id/TextView01"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_below="@+id/button15"
        android:layout_alignLeft="@+id/button16"
        android:layout_marginTop="20dp"
        android:background="#f0bd00"
        android:gravity="center"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/TextView06"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/TextView05"
        android:layout_toLeftOf="@+id/TextView05"
        android:background="#f0bd00"
        android:gravity="center"
        android:text="邮箱："
        android:textColor="#ffffff"
        android:textSize="15dip" />

    <Button
        android:id="@+id/button17"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/TextView07"
        android:layout_below="@+id/TextView07"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape1"
        android:text="修改"
        android:textColor="#ffffff"
        android:textSize="15dip" />

</RelativeLayout>