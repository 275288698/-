<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/denglu" >

    <Button
        android:id="@+id/button_denglu1"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignRight="@+id/editText_mima"
        android:layout_below="@+id/editText_mima"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape1"
        android:text="登录"
        android:textSize="20dip" />

    <Button
        android:id="@+id/button_zhuce2"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/button_denglu1"
        android:layout_alignBottom="@+id/button_denglu1"
        android:layout_alignLeft="@+id/textView_mima"
        android:background="@drawable/shape2"
        android:text="忘记密码"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView22"
        android:background="#f0625f"
        android:gravity="center"
        android:text="昵称："
        android:textColor="#ffffff"
        android:textSize="18dip" />

    <EditText
        android:id="@+id/editText_nicheng"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignTop="@+id/textView22"
        android:background="#f0625f"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView_mima"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/editText_nicheng"
        android:layout_marginTop="24dp"
        android:background="#f0625f"
        android:gravity="center"
        android:text="密码："
        android:textColor="#ffffff"
        android:textSize="18dip" />

    <EditText
        android:id="@+id/editText_mima"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/textView_mima"
        android:layout_toRightOf="@+id/textView_mima"
        android:background="#f0625f"
        android:ems="10"
        android:inputType="textPassword" />

</RelativeLayout>