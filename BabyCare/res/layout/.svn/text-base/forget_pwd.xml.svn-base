<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#f1f9f1"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/layout_after"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp" >

        <EditText
            android:id="@+id/cellphoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="填写帐号"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#b9b9b9"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
                 android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
            android:background="@drawable/line_gary_long" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/captcherNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:hint="4位短信验证码"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#b9b9b9"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                         android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/line_gary_long" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_resend"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_green_big_btn"
                android:onClick="onBtnClick"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="填写新密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#b9b9b9"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
                android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
            android:background="@drawable/line_gary_long" />

       

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_green_big_btn"
            android:onClick="onBtnClick"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
