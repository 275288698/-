<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backshezhi1"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    
  

    <Button
        android:id="@+id/button12"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:background="#708090"
        android:gravity="center"
        android:text="返回"
        android:textSize="20dip"
        android:textColor="#ff0000" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="250dp"
        android:layout_height="45dp"
       android:layout_above="@+id/textView44"
        android:layout_alignRight="@+id/textView44"
        android:background="#708090"
        android:gravity="center"
        android:text="设置-注册与登录"
        android:textColor="#ffffff" 
        android:textSize="20dip"/>

    <TextView
        android:id="@+id/textView44"
        android:layout_width="190dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="" />

    <Button
        android:id="@+id/button1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape1"
        android:layout_marginTop="40dp"
        android:text="注册优彼会员"
        android:textColor="#ffffff" 
        android:textSize="20dip"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#f0bd00"
        android:text="优彼会员登录"
        android:textColor="#ffffff"
        android:textSize="20dip" />
    
     <Button
        android:id="@+id/button30"
        android:layout_width="250dp"
        android:layout_height="50dp"
       	android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape1"
        android:layout_marginTop="25dp"
        android:text="查看修改会员信息" 
        android:textColor="#ffffff"
        android:textSize="20dip"/>

     <Button
         android:id="@+id/button4"
         android:layout_width="250dp"
         android:layout_height="15dp"
         android:layout_alignLeft="@+id/button2"
         android:layout_below="@+id/button2"
         android:background="#f0bd00"
         android:text="(“宝贝家”官网帐号通用)"
         android:textColor="#ffffff"
         android:textSize="12dip" />

     <TextView
         android:id="@+id/textView5"
         android:layout_width="250dp"
         android:layout_height="156dp"
         android:layout_alignLeft="@+id/button30"
         android:layout_below="@+id/button30"
         android:layout_marginTop="20dp"
         android:background="@drawable/erweima" />

</RelativeLayout>