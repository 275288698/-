<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252934"
    android:orientation="vertical"
    android:gravity="center_horizontal" >

   <TextView 
       android:id="@+id/track_draw_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="轨迹绘制"
       android:clickable="true"
        android:layout_marginTop="10dp"
       android:drawableTop="@drawable/bg_locus"
       android:drawablePadding="5dp"
       android:textSize="12sp"
       android:textColor="@color/item_right_text"
       />
   <TextView 
       android:id="@+id/phone_call_back_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:text="电话回拨"
       android:clickable="true"
       android:drawableTop="@drawable/bg_callback"
       android:drawablePadding="5dp"
       android:textSize="12sp"
       android:textColor="@color/item_right_text"
       />
   <TextView 
       android:id="@+id/electronic_fence_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="电子围栏"
        android:clickable="true"
       android:drawableTop="@drawable/bg_fence"
       android:drawablePadding="5dp"
       android:textSize="12sp"
        android:layout_marginTop="10dp"
       android:textColor="@color/item_right_text"
       />

</LinearLayout>